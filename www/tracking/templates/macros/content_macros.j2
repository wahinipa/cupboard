{% macro render_top_menu_item(current_activity=None, label='', url=None, flavor=None, activity=None) %}
  <a href="{{ url }}" role="button"
     class="pill_button btn{% if flavor %} btn-flavor-{{ flavor }}{% endif %}{% if current_activity==activity %} active{% endif %}">{{ label }}</a>
{% endmacro %}

{% macro top_menu(current_activity=None, top_menu_items=None) %}
  {% if top_menu_items %}
    {% for menu_item in top_menu_items %}
      {{ render_top_menu_item(current_activity=current_activity, **menu_item) }}
    {% endfor %}
    {% else %}
  {% endif %}
{% endmacro %}