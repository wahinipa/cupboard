{% macro home_nav_item(active_flavor) %}
  {{ render_pill(endpoint='root_bp.root_list', label='Home', active_flavor=active_flavor, flavor='home') }}
{% endmacro %}

{% macro category_nav_item(active_flavor, category_list_url) %}
  {% if category_list_url %}
    {{ render_pill(url=category_list_url, label='Categories', active_flavor=active_flavor, flavor='category') }}
  {% endif %}
{% endmacro %}

{% macro people_nav_item(active_flavor) %}
  {{ render_pill(endpoint='people_bp.people_list', label='People', active_flavor=active_flavor, flavor='people') }}
{% endmacro %}

{% macro admin_database_edit_nav_item(current_user) %}
  {% if current_user.may_edit_database %}
    {{ render_pill(endpoint='admin.index', label='Admin', flavor='admin') }}
  {% endif %}
{% endmacro %}

{% macro render_pill(label='', endpoint=None, url=None, active_flavor=None, flavor=None) %}
  <a href="{% if endpoint %}{{ url_for(endpoint) }}{% else %}{{ url }}{% endif %}" role="button"
     class="btn{% if flavor %} btn-flavor-{{ flavor }}{% endif %}{% if active_flavor==flavor %} active{% endif %}">{{ label }}</a>
{% endmacro %}

