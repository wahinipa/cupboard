{% macro home_nav_item(active_label) %}
  {{ render_pill('root_bp.root_list', 'Home', active_label) }}
{% endmacro %}

{% macro admin_database_edit_nav_item(current_user) %}
  {% if current_user.may_edit_database %}
    {{ render_pill('admin.index', 'Admin') }}
  {% endif %}
{% endmacro %}

{% macro render_pill(endpoint, label, active_label=None) %}
  <li class="nav-item">
    <a href="{{ url_for(endpoint) }}" class="nav-link{% if label==active_label %} active{% endif %}">{{ label }}</a>
  </li>
{% endmacro %}

{% macro show_action_button(label="Show Actions") %}
  <label class="action-toggle" for="action_check_button"><span class="badge bg-primary">{{ label }}</span></label>
{% endmacro %}