{% macro render_pill(endpoint, label, active_flavor=None, flavor=None) %}
  <li class="nav-item{% if flavor %} nav-flavor-{{ flavor }}{% endif %}">
    <a href="{{ url_for(endpoint) }}" class="nav-link{% if active_flavor==flavor %} active{% endif %}">{{ label }}</a>
  </li>
{% endmacro %}

