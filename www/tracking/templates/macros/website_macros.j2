{% macro website_logo(project_name) %}
  <div class="col-md-2">
    <div class="card flex-row flex-wrap">
      <div class="card-header border-0">
        <img width="104" height="32" src="{{ url_for('static', filename='logo.png') }}">
      </div>
      <div class="card-body">{{ project_name }}</div>
    </div>
  </div>
{% endmacro %}

{% macro user_options(current_user) %}
  <div class="col-md-2">
    <div class="card">
      {% if current_user.is_authenticated %}
        {{ user_options_logged_in(current_user) }}
      {% else %}
        {{ user_options_logged_out() }}
      {% endif %}
    </div>
  </div>
{% endmacro %}

{% macro user_options_logged_out() %}
  <div class="card-body bg-warning text-center">
    Not logged in.
  </div>
{% endmacro %}

{% macro user_options_logged_in(current_user) %}
  <div class="card-header">
    Logged in as {{ current_user.username }}
  </div>
  <div class="card-body bg-light">
    <a class="btn-md btn-primary" href="{{ url_for('people_bp.logout') }}" role="button"><span
        class="badge bg-primary">Sign Out</span></a>
    <a class="btn-md btn-primary" href="{{ url_for('people_bp.change_password') }}" role="button"><span
        class="badge bg-primary">Change Password</span></a>
    <a class="btn-md btn-primary" href="{{ url_for('people_bp.profile') }}" role="button"><span
        class="badge bg-primary">Change User Profile</span></a>
  </div>
{% endmacro %}
