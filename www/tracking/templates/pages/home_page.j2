{% extends "pages/content.j2" %}
{% from 'cardistry/cards.j2' import card_view, card_child, card_tasks %}
{% from 'macros/content_macros.j2' import show_action_button %}
{% block innards %}
  {% call card_view(label=label, purpose='target', column_width="12", is_row=True) %}
  {% endcall %}
  {% if children %}
    {% for child in children %}
      {{ card_child(column_width="12", **child) }}
    {% endfor %}
  {% endif %}
  {% if tasks %}
    {{ card_tasks(label=label, tasks=tasks) }}
  {% endif %}
{% endblock %}
{% block bottom_header %}
  {% if tasks %}
    {{ show_action_button() }}
  {% endif %}
{% endblock %}
