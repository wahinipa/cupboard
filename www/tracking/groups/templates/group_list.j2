{% extends "content.j2" %}
{% from 'button_macros.j2' import render_create_button %}
{% from 'card_macros.j2' import render_card %}
{% from 'group_macros.j2' import group_macro %}
{% from 'action_macros.j2' import action_card %}
{% block innards %}
  {% call render_card(title='Groups') %}
    <h3>Groups have Places which have Things</h3>
    {% if create_group_url %}{{ render_create_button(text="Group", link=create_group_url) }}{% endif %}
  {% endcall %}
  {% for group in groups %}
    {% call render_card(title=group.name, link=group.url, background='secondary') %}
      {{ group_macro(**group) }}
    {% endcall %}
  {% endfor %}
  {{ action_card("Groups", actions) }}
{% endblock %}
