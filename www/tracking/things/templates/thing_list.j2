{% extends "content.j2" %}
{% from 'button_macros.j2' import render_create_button, render_update_button, render_delete_button %}
{% from 'card_macros.j2' import render_card %}
{% from 'tree_macros.j2' import tree_root %}
{% from 'action_macros.j2' import action_card %}
{% block innards %}
  {% call render_card(title=label) %}
    {% if lines %}
      {% for line in lines %}
        <h5>{{ line }}</h5>
      {% endfor %}
    {% endif %}
    <div id="tree">
    </div>
  {% endcall %}
  {{ action_card(label, actions) }}
{% endblock %}
{% block extra_js %}
  {{ tree_root(nodes) }}
{% endblock %}
