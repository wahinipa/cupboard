{% extends "content.j2" %}
{% from 'button_macros.j2' import render_create_button %}
{% from 'card_macros.j2' import render_card %}
{% from 'category_macros.j2' import category_macro %}
{% from 'action_macros.j2' import action_card %}
{% block innards %}
  {% call render_card(title='Categories') %}
    <h3>Categories are lists of Choices for being more specific about Things</h3>
    {% if create_category_url %}{{ render_create_button(text="Category", link=create_category_url) }}{% endif %}
  {% endcall %}
  {% for category in groups %}
    {% call render_card(title=category.name, link=category.url, background='secondary') %}
      {{ category_macro(**category) }}
    {% endcall %}
  {% endfor %}
  {{ action_card("Categories", actions) }}
{% endblock %}
